#include <iostream>
using namespace std;
int main()
{
    int number1,number2;
    cout<<"Enter the first number : ";
    cin>>number1;
    cout<<"Enter the second number : ";
    cin>>number2;
    cout<<"Enter the operation to be performed... ";
    string operation;
    cin>>operation;
    if(operation=="+")
    {
        cout<<"The final value is : "<<number1+number2;
    }
    else if(operation=="-")
    {
        cout<<"The final value is : "<<number1-number2;
    }
    else if(operation=="*")
    {
        cout<<"The final value is : "<<number1*number2;
    }
    else if(operation=="/")
    {
        cout<<"The final value is : "<<number1/number2;
    }
    else{
        cout<<"Enter a valid arithmetic operator.";
    }
}
